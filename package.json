{
  "name": "somix-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "SOMIX Monorepo - AI Social Media with NFT on Vercel",
  "scripts": {
    "dev:api": "cd somix-api && npm run dev",
    "dev:web": "cd somix-web && npm run dev",
    "dev": "npm-run-all --parallel dev:api dev:web",
    "build": "npm run build:api && npm run build:web",
    "build:api": "cd somix-api && npm install",
    "build:web": "cd somix-web && npm install && npm run build"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "blurhash": "^2.0.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.15.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "form-data": "^4.0.4",
    "helmet": "^7.1.0",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "nodemon": "^3.0.2"
  }
}
